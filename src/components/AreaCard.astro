---
const {name, image, link} = Astro.props;
---

<a href={link}>
  <div class="icon-area">
    <img src={image} alt={name} srcset="">
  </div>
  <h3>{name}</h3>
</a>

<style>
  a {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    padding: 5px 5px;
    background-color: var(--green-50);
    border: 1px solid var(--green-950);
    border-radius: 8px;
    color: var(--green-800);
    width: 85px;
  }

  img {
    min-width: 55px;
    max-width: 85px;
  }
</style>
