---
import areas from "@content/areas/area.yml";
import AreaItem from "@components/AreaItem.astro";
import ProyectoLayout from "@layouts/ProyectoLayout.astro";
---

<ProyectoLayout>
  <ul>
    {
      areas.areas.map((area) => (
        <li class="area-item">
          <AreaItem
            link="/area"
            pk={area.id}
            name={area.name}
            participants={area.participants}
          />
        </li>
      ))
    }
  </ul>
</ProyectoLayout>

<style>
  li {
    margin: 10px 15px;
  }
</style>
